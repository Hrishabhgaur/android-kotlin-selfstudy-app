<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:padding="10dp"
                    android:id="@+id/imageSubject"
                    android:background="@color/colorListBG"
                    android:src="@drawable/img_gift"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameSubject"
                    android:text="Subject Name"
                    android:layout_toRightOf="@+id/imageSubject"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/oxygen"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressSubject"
                    android:text="@string/progress"
                    android:textColor="@color/colorText"
                    android:layout_toRightOf="@+id/imageSubject"
                    android:layout_below="@+id/nameSubject"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/oxygen"/>
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="120dp"
                    android:layout_height="5dp"
                    android:layout_below="@+id/nameSubject"
                    android:layout_toRightOf="@+id/progressSubject"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:progressDrawable="@drawable/rounded_corners_progress_bar"
                    android:id="@+id/progressBar"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressPercent"
                    android:text="0%"
                    android:layout_toRightOf="@+id/progressBar"
                    android:layout_below="@+id/nameSubject"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/oxygen"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>